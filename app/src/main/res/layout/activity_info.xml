<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirm_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 질병 이름 및 확률 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <!-- 질병 이름 -->
                <TextView
                    android:id="@+id/disease_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질병 이름"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- 확률 % -->
                <TextView
                    android:id="@+id/disease_probability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@id/disease_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="45dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 질병 설명 -->
            <TextView
                android:id="@+id/disease_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이것은 질병에 대한 상세 설명으로, 질병의 성격, 원인 및 일반적인 개요에 대한 정보를 제공합니다."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#333333" />

            <!-- 먹으면 좋은 음식 섹션 -->
            <TextView
                android:id="@+id/disease_food_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="먹으면 좋은 음식"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/disease_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 음식 1\n2. 음식 2\n3. 음식 3"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#333333" />

            <!-- 진료과 섹션 -->
            <TextView
                android:id="@+id/disease_department_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진료과"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/disease_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당 질병을 치료할 수 있는 진료과는 내과, 신경과, 외과 등입니다."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#333333" />

            <!-- 근처 병원 섹션 -->
            <TextView
                android:id="@+id/nearby_hospitals_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근처 병원"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hospital_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="병원 1 이미지"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/hospital_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="병원 2 이미지"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/hospital_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="병원 3 이미지" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 확인 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemIconTint="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
