<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_arrow_left_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:src="@drawable/arrow_left_board" />

        <!-- 제목 텍스트 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="14dp"
            android:textSize="35sp" />

    </LinearLayout>
    <!-- 좌측 화살표 아이콘 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_contents"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/tv_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="글 내용"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_bottom_best_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line" />

    </LinearLayout>

    <!-- 텍스트 내용 영역 -->


    <!-- 하단 라인 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/chat_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hospital"
            android:tint="#156081"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의료인 건강상담"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/chat_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="증상부터 건강검진까지\n고민하지 말고 물어보세요!"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/chat_button"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_round_blue"
            android:text="마음 편하게 질문하기"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>




    <!-- 내용 입력 텍스트 -->


    <!-- 저장 버튼 및 작성 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

    </LinearLayout>


</LinearLayout>
