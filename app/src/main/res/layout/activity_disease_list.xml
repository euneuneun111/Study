<!--                android:layout_marginEnd="16dp" />-->
<!--        </LinearLayout>-->

        <!-- ScrollView 추가 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/nodule"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결절"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Pneumo"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기흉"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Athelectasis"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="무기폐"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Edema"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부종"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Effusion"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="삼출"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Fibrosis"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="섬유화"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Cardiomegaly"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="심장비대"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Mass"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="종괴"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Infiltration"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="침윤"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Hernia"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="탈장"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Consolidation"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="폐경화"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Emphysema"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="폐기종"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Pneumonia"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="폐렴"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginLeft="14dp"

                    android:id="@+id/Pleural"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="흉막 비후"
                    android:textSize="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
