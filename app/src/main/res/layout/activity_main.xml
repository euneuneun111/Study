<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 애플리케이션 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="X - RayCare"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="28sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/disease_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@android:color/holo_blue_dark"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_book" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mri_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- 이미지 업로드 버튼 -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@android:color/holo_blue_dark"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="이미지 추가"
                android:src="@drawable/ic_add" />

            <!-- "MRI 이미지 선택" 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRI 이미지 선택"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 근처 지역 병원 텍스트 -->
        <TextView
            android:id="@+id/nearby_hospitals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="근처 지역 병원"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp" />

        <!-- 최근 진단 기록 텍스트 -->
        <TextView
            android:id="@+id/recent_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 진단 기록"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp" />

        <!-- 최근 진단 기록을 위한 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_records_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
